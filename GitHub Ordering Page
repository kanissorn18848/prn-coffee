<!DOCTYPE html>
<html>
<head>
    <title>Coffee Shop Menu</title>
    <style>
        body { font-family: sans-serif; padding: 20px; background: #fdfaf6; }
        .menu-item { border: 1px solid #ddd; padding: 10px; margin-bottom: 10px; border-radius: 8px; background: white; display: flex; justify-content: space-between; }
        button { background: #6f4e37; color: white; border: none; padding: 8px 15px; border-radius: 5px; cursor: pointer; }
        #cart { margin-top: 20px; padding: 15px; background: #eee; border-radius: 8px; }
    </style>
</head>
<body>

    <h2>â˜• Small Shop Menu</h2>
    
    <div class="menu-item">
        <span>Latte - $4.00</span>
        <button onclick="addToCart('Latte', 4.00)">Add to Order</button>
    </div>

    <div class="menu-item">
        <span>Americano - $3.00</span>
        <button onclick="addToCart('Americano', 3.00)">Add to Order</button>
    </div>

    <div id="cart">
        <h3>Your Order</h3>
        <ul id="order-list"></ul>
        <p><strong>Total: $<span id="total-price">0.00</span></strong></p>
        <input type="text" id="customer-name" placeholder="Your Name" style="padding: 8px; width: 200px;"><br><br>
        <button onclick="submitOrder()">Submit Order to Sheet</button>
    </div>

    <script>
        let cart = [];
        let total = 0;

        function addToCart(item, price) {
            cart.push(item);
            total += price;
            updateDisplay();
        }

        function updateDisplay() {
            const list = document.getElementById('order-list');
            list.innerHTML = cart.map(item => `<li>${item}</li>`).join('');
            document.getElementById('total-price').innerText = total.toFixed(2);
        }

        function submitOrder() {
            const scriptURL = 'YOUR_GOOGLE_APPS_SCRIPT_URL_HERE'; // PASTE YOUR URL HERE
            const name = document.getElementById('customer-name').value;

            if (!name || cart.length === 0) {
                alert("Please add items and enter your name!");
                return;
            }

            const data = {
                details: cart.join(", "),
                total: total.toFixed(2),
                customer: name
            };

            fetch(scriptURL, {
                method: 'POST',
                mode: 'no-cors', // Important for Google Script
                cache: 'no-cache',
                body: JSON.stringify(data)
            }).then(() => {
                alert("Order Sent! Check your Google Sheet.");
                cart = [];
                total = 0;
                document.getElementById('customer-name').value = '';
                updateDisplay();
            }).catch(err => console.error(err));
        }
    </script>
</body>
</html>
